<div class="mx-auto max-w-screen-xl">
  <div>
    <img class="object-cover w-[100%] h-96" src="<%= @post.img_url %>" alt="img">
  </div>

  <div class="self-center max-w-48 p-1">
    <p>Written by <%= @post.author %></p>
    <h2 class="text-2xl font-bold"><%= @post.title %></h2>
    <p class="flex-1"><%= @post.body %></p>
  </div>

  <%= link_to 'Edit', edit_post_path %>
  <%= link_to 'Delete', post_path, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} %>
</div>

<%= render 'comments/comments' %>
<%= render 'comments/form' %>