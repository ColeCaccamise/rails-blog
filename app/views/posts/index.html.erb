<!--index template-->
<h1 class="text-3xl">Posts</h1>
<ul class="mt-6 md:flex md:flex-wrap md:gap-6 md:justify-around md:flex-1
">
  <% @posts.each do |post| %>
    <li class='mt-4 mb-4'>
      <p><%= post.author %></p>
      <h3 class="text-xl font-semibold"><%= post.title %></h3>
      <p class="text-md"><%= post.body %></p>
      <img src="<%= post.img_url %>" alt="image" class="mt-4 mb-4 w-[100%] max-h-56 object-cover">
      <a class="text-sm bg-black text-white p-2 inline-block rounded-md" href="<%= show_post_path(post) %>">Read more</a>
    </li>
  <% end %>
</ul>