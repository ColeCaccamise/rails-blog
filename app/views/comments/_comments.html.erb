<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="mt-2 mb-2">
    <p><strong><%= comment.username %></strong></p>
    <p><%= comment.body %><%= link_to '[X]', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'} %></p>
  </div>
<% end %>